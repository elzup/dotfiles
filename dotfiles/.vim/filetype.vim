augroup filetypedetect
    au BufRead,BufNewFile *.qr set filetype=qr
    au BufRead,BufNewFile *.vimperatorrc,*.vimp set filetype=vim
    au BufRead,BufNewFile *.mzshrc,*.myzshrc set filetype=zsh
    au BufRead,BufNewFile *.wolf set filetype=wolf
    au BufRead,BufNewFile *.snippet set filetype=neosnippet
augroup END
